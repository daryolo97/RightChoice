<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".InserisciFeedbackActivity">



    <android.support.v7.widget.CardView
        android:id="@+id/feedbackForm"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFA000"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/feedbackForm">

            <EditText
                android:id="@+id/titoloFeedbackInserito"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#11000000"
                android:ems="10"
                android:hint="Inserisci titolo del feedback..."
                android:textColorHint="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_below="@+id/titoloFeedbackInserito"
                android:layout_marginTop="20dp"
                android:background="#11000000"
                android:ems="10"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textSize="16dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descrizioneFeedbackInserito"
                android:layout_below="@id/titoloFeedbackInserito"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci feedback..."
                android:textColorHint="#fff"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/inserisciFeedbackTasto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/feedbackForm"
        android:onClick="creaFeedback"
        app:cardBackgroundColor="#FFA000"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Invia feedback"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>