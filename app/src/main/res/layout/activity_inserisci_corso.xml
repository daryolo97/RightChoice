<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".InserisciCorsoActivityADMIN">


    <android.support.v7.widget.CardView
        android:id="@+id/CorsoForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFA000"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/CorsoForm">

            <EditText
                android:id="@+id/nomeCorsoInserito"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#11000000"
                android:ems="10"
                android:hint="Inserisci nome del corso..."
                android:textColorHint="#ffffff"
                android:textColor="#fff"
                android:textSize="25dp" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/docenteCorsoInserito"
                android:layout_below="@id/nomeCorsoInserito"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci docente del corso..."
                android:textColorHint="#fff"
                android:textColor="#fff"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_below="@id/docenteCorsoInserito"
                android:layout_marginTop="20dp"
                android:id="@+id/descrizioneFake"
                android:background="#11000000"
                android:textColor="#fff"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descrizioneCorsoInserito"
                android:layout_below="@id/docenteCorsoInserito"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci descrizione..."
                android:background="#11000000"
                android:textColorHint="#fff"
                android:textColor="#fff"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/codiceCorsoInserito"
                android:layout_below="@id/descrizioneFake"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci codice corso..."
                android:textColorHint="#fff"
                android:textColor="#fff"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linkCorsoInserito"
                android:layout_below="@id/codiceCorsoInserito"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci link del corso..."
                android:textColorHint="#fff"
                android:textColor="#fff"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/inserisciCorsoTasto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="inserisciCorso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/CorsoForm"
        app:cardBackgroundColor="#FFA000"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Crea corso"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>