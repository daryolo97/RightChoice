<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ModificaCorsoActivityADMIN">


    <android.support.v7.widget.CardView
        android:id="@+id/modificaCorsoForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFA000"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/CorsoForm">

            <EditText
                android:id="@+id/modificaNomeCorsoInserito"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#11000000"
                android:ems="10"
                android:hint="Inserisci nome del corso..."
                android:textColorHint="#ffffff"
                android:textColor="#fff"
                android:textSize="25dp" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modificaDocenteCorsoInserito"
                android:layout_below="@id/modificaNomeCorsoInserito"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci docente del corso..."
                android:textColorHint="#fff"
                android:textColor="#fff"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_below="@id/modificaDocenteCorsoInserito"
                android:layout_marginTop="20dp"
                android:id="@+id/modificaDescrizioneFake"
                android:background="#11000000"
                android:textColor="#fff"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modificaDescrizioneCorsoInserito"
                android:layout_below="@id/modificaDocenteCorsoInserito"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci descrizione..."
                android:textColorHint="#fff"
                android:textColor="#fff"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modificaCodiceCorsoInseritoScrita"
                android:layout_below="@id/modificaDescrizioneFake"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Codice corso: "
                android:textColorHint="#fff"
                android:textColor="#fff"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modificaCodiceCorsoInserito"
                android:layout_below="@id/modificaDescrizioneFake"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="95dp"
                android:hint="TEST "
                android:textColorHint="#fff"
                android:textColor="#fff"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modificaLinkCorsoInserito"
                android:layout_below="@id/modificaCodiceCorsoInserito"
                android:background="#11000000"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:hint="Inserisci link del corso..."
                android:textColorHint="#fff"
                android:textColor="#fff"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/modificaCorsoTasto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="modificaCorso"
        android:layout_below="@+id/modificaCorsoForm"
        app:cardBackgroundColor="#FFA000"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Modifica corso"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>